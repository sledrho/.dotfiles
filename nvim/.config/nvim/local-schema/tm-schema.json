{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$ref": "#/definitions/threatLibrary",
  "definitions": {
    "threatLibrary": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "riskPatterns": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/riskPatterns"
          }
        }
      },
      "required": ["riskPatterns"],
      "title": "threatlibrary"
    },
    "riskPatterns": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "desc": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "useCases": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/UseCase"
          }
        }
      },
      "required": ["desc", "name", "tags", "useCases"],
      "title": "riskPatterns"
    },
    "UseCase": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "desc": {
          "type": "string"
        },
        "threats": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Threat"
          }
        }
      },
      "required": ["desc", "name", "threats"],
      "title": "UseCase"
    },
    "Threat": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "desc": {
          "type": "string"
        },
        "impact": {
          "$ref": "#/definitions/Impacts"
        },
        "weaknesses": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Weaknesses"
          }
        }
      },
      "required": ["desc", "impact", "name"],
      "title": "Threat"
    },
    "Impacts": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "confidentiality": {
          "type": "integer",
          "maximum": 100
        },
        "integrity": {
          "type": "integer",
          "maximum": 100
        },
        "availability": {
          "type": "integer",
          "maximum": 100
        },
        "easeOfExploitation": {
          "type": "integer",
          "maximum": 100
        }
      },
      "required": [
        "confidentiality",
        "integrity",
        "availability",
        "easeOfExploitation"
      ],
      "title": "Impacts"
    },
    "Weaknesses": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "desc": {
          "type": "string"
        },
        "countermeasures": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Countermeasures"
          }
        }
      },
      "required": ["name", "desc", "countermeasures"],
      "title": "Weaknesses"
    },
    "Countermeasures": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "acceptanceCriteria": {
          "type": "string"
        },
        "testingSteps": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "howToEvidence": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "state": {
          "type": "string",
          "oneOf": [{ "const": "Required" }, { "const": "Implemented" }]
        },
        "references": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/References"
          }
        },
        "standards": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Standards"
          }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "automatedVerification": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/AutomatedVerification"
          }
        }
      },
      "required": [
        "name",
        "howToEvidence",
        "testingSteps",
        "acceptanceCriteria",
        "state",
        "references",
        "standards"
      ],
      "title": "Countermeasures"
    },
    "References": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      },
      "required": ["name", "url"],
      "title": "References"
    },
    "Standards": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "sections": {
          "type": "array",
          "items": {
            "type": ["string", "number"]
          }
        }
      },
      "required": ["name", "sections"],
      "title": "Standards"
    },
    "AutomatedVerification": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "tool": {
          "$ref": "#/definitions/ToolClass"
        }
      },
      "required": ["tool"],
      "title": "AutomatedVerification"
    },
    "ToolClass": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "orca": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Tool1Element"
          }
        },
        "code": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Tool1Element"
          }
        },
        "snyk-iac": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Tool1Element"
          }
        }
      },
      "required": [],
      "title": "ToolClass"
    },
    "Tool1Element": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        }
      },
      "required": ["name"],
      "title": "Tool1Element"
    }
  }
}
